<div class="container mx-auto px-4 py-6">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
    {{#each listings as |listing|}}
      <div class="listing-card border rounded-lg shadow-lg p-4 hover:shadow-xl hover:bg-gray-100 transition duration-200 cursor-pointer" data-id="{{listing.id}}">
        <div class="flex justify-center mb-4">
          <img src="{{listing.img_url}}" alt="{{listing.title}}" class="max-h-48 object-cover">
        </div>
        <h3 class="text-xl font-semibold mb-2">{{listing.title}}</h3>
        <p class="text-gray-700 mb-2">{{listing.description}}</p>
        <p class="text-gray-900 font-bold mb-4">${{listing.price}}</p>
        <div class="flex justify-between text-gray-600 text-sm">
          <p>{{listing.location}}</p>
          <p>{{listing.time}}</p>
        </div>
        <div class="flex justify-between mt-2 text-sm text-gray-600">
          <div class="flex items-center">
            <svg class="w-4 h-4 fill-current text-gray-500 mr-1" viewBox="0 0 20 20"><path d="M10 15l-5.5 3 1-5.9L.8 7.8l6-.5L10 2l3.2 5.3 6 .5-4.7 4.3 1 5.9z"/></svg>
            <span>{{listing.views}}</span>
          </div>
          <div class="flex items-center">
            <svg class="w-4 h-4 fill-current text-gray-500 mr-1" viewBox="0 0 20 20"><path d="M10 18l-6-3.3V4l6-3 6 3v10.7L10 18zm-4-3.3l4 2.2 4-2.2V5.3L10 3.5 6 5.3v9.4z"/></svg>
            <span>{{listing.favorites}}</span>
          </div>
        </div>
      </div>
    {{else}}
      <p class="col-span-full text-center text-gray-700">No listings available at this time.</p>
    {{/each}}
  </div>
</div>
