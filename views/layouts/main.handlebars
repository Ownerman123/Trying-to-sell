<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>"Try" To Sell</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/public/css/style.css" />
  </head>

  <body>
    <div class="flex-column justify-space-around">
      <header
        id="header"
        class="display-flex justify-space-between align-center p-2"
      >
        <!-- component -->
        <nav
          class="font-sans flex flex-col text-center content-center sm:flex-row sm:text-left sm:justify-between py-2 px-6 bg-white shadow sm:items-baseline w-full"
        >

          <div class="mb-2 sm:mb-0 flex flex-row">
            <div class="h-10 w-10 self-center mr-2">
              <img
                class="h-10 w-10 self-center"
                src="https://placehold.co/600x400"
              />
            </div>
            <div>
              <a
                href="/"
                class="text-2xl no-underline text-grey-darkest hover:text-blue-dark font-sans font-bold"
              >"TRY" To Sell</a><br />
              <span class="text-xs text-grey-dark">The Suedo Selling Market!</span>
            </div>
          </div>

          <div class="sm:mb-0 self-center">
            <!-- <div class="h-10" style="display: table-cell, vertical-align: middle;"> -->
            {{#if logged_in}}
          <a
            href="/newListing"
            class="text-md no-underline text-grey-darker hover:text-blue-dark ml-2 px-1"
          >Create Listing</a>
          <a
            href="/api/user/profile"
            class="text-md no-underline text-grey-darker hover:text-blue-dark ml-2 px-1"
          >Profile</a>
          <button
            id="logout-btn"
            class="text-md no-underline text-grey-darker hover:text-blue-dark ml-2 px-1"
          >Logout</button>
          {{else}}
          <a
            href="/login"
            class="text-md no-underline text-black hover:text-blue-dark ml-2 px-1"
          >Login</a>
          {{/if}}
            
            <!-- </div> -->

          </div>
        </nav>
      </header>

      <main class="mt-5 w-full">
        <!-- Render the sub layout -->
        {{{body}}}
      </main>

      <footer id="footer"></footer>
    </div>

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
      
    {{/if}}
  </body>

</html>